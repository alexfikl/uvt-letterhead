% >>>

% <<< header / footer

\pagestyle{fancy}

\renewcommand{\headrule}{%
\vspace{-0.75in}
\hfill\begin{tikzpicture}
    \shade[left color=white, right color=UVTLightBlue, dashed]
        (0, 0) rectangle (7.7in, 0.04in);
\end{tikzpicture}
}

\fancyfoot{}
\fancyfoot[C]{%
\begin{center}
\tiny
\doublespacing
\textcolor{UVTFooterGray}{
    \@fromdeptaddress \\
    \textsc{Telefon}: \@fromdeptphone \\
    \textsc{Email}: \href{mailto:\@fromdeptemail}{\@fromdeptemail} \\
    \href{\@fromdeptweb}{\@fromdeptweb}
}
\end{center}
}

\fancyhead{}
\fancyhead[L]{%
    \begin{textblock*}{\textwidth}(0.15in, 0.4in)
        \includegraphics[width=0.2\textwidth]{\@logofile}
    \end{textblock*}
}
\fancyhead[R]{%
\begin{textblock*}{\textwidth}(1.5in, 0.9in)
    {\tiny\textcolor{UVTHeaderGray}{\MakeUppercase{Universitatea de Vest din Timișoara}}} \\
    {\footnotesize\textcolor{UVTHeaderBlue}{\MakeUppercase{\@fromdept}}}%
\end{textblock*}
}

% >>>

% <<< opening

\AtBeginDocument{%
    \hfill\@ifundefined{@fromdate}{\today}{\@fromdate}
}

% >>>

% <<< closing

\AtEndDocument{%
    \bigskip
    \bigskip

    \@ifundefined{@closing}{}{
        \noindent\@closing,
        \medskip
    }

    \@ifundefined{@signaturefile}{}{
        \noindent\includegraphics[width=0.35\textwidth]{\@signaturefile}
        \medskip
    }

    \noindent\@fromname \\
    \@ifundefined{@fromemail}{}{
        \textsc{Email}: \href{mailto:\@fromemail}{\@fromemail} \\
    }
    \@ifundefined{@fromweb}{}{
        \textsc{Website}: \href{\@fromweb}{\@fromweb}
    }
}

% >>>

% <<< spacing

\if@doublespacing
    \doublespacing
\else
    \onehalfspacing
\fi

% >>>

\endinput

