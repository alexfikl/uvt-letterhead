% <<< header / footer

\pagestyle{fancy}

\renewcommand{\headrule}{
\begin{tikzpicture}[remember picture, overlay]
\node [
    rectangle, left color=white, right color=UVTLightBlue,
    anchor=north east,
    minimum width=0.8\paperwidth,
    outer sep=0,
    inner sep=0,
    yshift=-1.15in,
    minimum height=0.15cm] (box) at (current page.north east) {};
\end{tikzpicture}
}

\fancyfoot{}
\fancyfoot[C]{%
\tiny
\sffamily
\onehalfspacing
\ifuvt@headerlogo\else
\begin{textblock*}{\paperwidth}(0in, 0.88\paperheight)
\includegraphics[scale=0.1]{\@fromdeptlogo}
\end{textblock*}
\fi
\begin{textblock*}{\paperwidth}(0in, 0.955\paperheight)
\textcolor{UVTFooterGray}{
    \@fromdeptaddress \\
    \textit{Telefon}: \@fromdeptphone \\
    \textit{E-mail}: \href{mailto:\@fromdeptemail}{\@fromdeptemail} \\
    \href{\@fromdeptweb}{\@fromdeptweb}
}
\end{textblock*}
}

\fancyhead{}
\fancyhead[L]{%
\begin{textblock*}{\paperwidth}(0in, 0in)
\ifuvt@headerlogo
    \vspace{\@uvtheaderlogooffset}
    \includegraphics[scale=0.2]{\@fromdeptlogo}
\else
    \includegraphics[scale=0.2]{\@fromuniversitylogo}
\fi
\end{textblock*}
}
\fancyhead[R]{%
\begin{textblock*}{\paperwidth}(-0.4in, 0.72in)
\ifthenelse{\equal{\uvt@department}{uvt}}{
    {\footnotesize\sffamily\textcolor{UVTHeaderLightBlue}{\MakeUppercase{\@fromuniversity}}} \\
    {\small\sffamily\textcolor{UVTHeaderGray}{\MakeUppercase{\@fromdept}}}%
}{
    {\footnotesize\sffamily\textcolor{UVTHeaderGray}{\MakeUppercase{\@fromuniversity}}} \\
    {\small\sffamily\textcolor{UVTHeaderBlue}{\MakeUppercase{\@fromdept}}}%
} \\
\@ifundefined{@fromoffice}{}{
    \vspace{0.9cm}
    \sffamily
    \textcolor{UVTOrange}{\MakeUppercase{\@fromoffice}}
}
\end{textblock*}
}

% >>>

% <<< opening

\NewDocumentCommand \uvtopenletter {} {
    \@ifundefined{@fromname}{}{
        \noindent \@fromname \\
    }
    \@ifundefined{@fromemail}{}{
        \noindent \textit{E-mail}: \href{mailto:\@fromemail}{\@fromemail} \\
    }
    \@ifundefined{@fromweb}{}{
        \noindent \textit{Website}: \href{\@fromweb}{\@fromweb} \\
    }
    \textit{\@fromuniversity} \\
    \textit{\@fromdept} \\
    \@ifundefined{@fromoffice}{}{
        \textit{\@fromoffice}
    }
}

% >>>

% <<< closing

\NewDocumentCommand \uvtdate {} {\the\day.\the\month.\the\year}

\NewDocumentCommand \uvtcloseletter {} {
    \@ifundefined{@closing}{}{
        \noindent \@closing,
        \medskip
    }

    \@ifundefined{@fromsignature}{}{
        \medskip
        \noindent \includegraphics[scale=0.35]{\@fromsignature}
        \medskip
    }

    \@ifundefined{@fromname}{}{
        \noindent \@fromname \\
    }
    \@ifundefined{@fromemail}{}{
        \noindent \textit{E-mail}: \href{mailto:\@fromemail}{\@fromemail} \\
    }
    \@ifundefined{@fromweb}{}{
        \noindent \textit{Website}: \href{\@fromweb}{\@fromweb}
    }
}

\NewDocumentCommand \uvtcloseform {} {
    \begin{tabular}[t]{l}
    Data: \\
    \textbf{\uvtdate}
    \end{tabular}%
    \hfill%
    \begin{tabular}[t]{ll}
        Nume, prenume: & \textbf{\@fromname} \\
        Semnătura: &
        \@ifundefined{@fromsignature}{}{
        \raisebox{\dimexpr10pt-\totalheight\relax}{
        \includegraphics[scale=0.3]{\@fromsignature}
        }}
    \end{tabular}
}

